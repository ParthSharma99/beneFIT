<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <stroke
                android:color="#00000000"
                android:width="1dp"/>
            <solid
                android:color="#30000000"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="#fff"
                android:width="1dp"/>
            <solid
                android:color="#10000000"/>
        </shape>
    </item>

</selector>