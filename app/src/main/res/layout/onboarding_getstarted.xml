<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_grey_gradient">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/colorPrimaryRegular"
        android:id="@+id/get_started_header">
        
        <TextView
            android:id="@+id/get_started_motto"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="30dp"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp"
            android:fontFamily="@font/oswald"
            android:text="TRAIN\nLIKE YOU\nMEAN IT"/>

        <ImageView
            android:id="@+id/get_started_motto_logo"
            android:layout_width="261dp"
            android:layout_height="220dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/bg_runner"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="-50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-50dp"
            android:background="@drawable/tilted_rect"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/get_started_logo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/benefit_logo"
        android:contentDescription="@string/app_name"/>

    <View
        android:id="@+id/get_started_divider"
        android:layout_width="205dp"
        android:layout_alignBottom="@id/get_started_logo"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryLight"/>

    <TextView
        android:id="@+id/get_started_begin_lbl"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_alignTop="@id/get_started_divider"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/proxima_nova"
        android:text="Begin Your Journey"/>

    <View
        android:layout_width="205dp"
        android:layout_alignBottom="@id/get_started_begin_lbl"
        android:layout_centerHorizontal="true"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryLight"/>

    <Button
        android:id="@+id/get_started_startBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        android:text="Get Started"
        android:background="@drawable/button_style"
        android:textColor="@color/colorClear"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/get_started_goals"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/oswald"
            android:text="Choose a goal"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova"
            android:textSize="16sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:text="Start your journey with a clear goal that you are aiming to achieve"
            android:textColor="@color/colorPrimary"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/get_started_goals_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_weight="4"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/get_started_pager_indicator1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />

                <ImageView
                    android:id="@+id/get_started_pager_indicator2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />

                <ImageView
                    android:id="@+id/get_started_pager_indicator3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/circle" />
            </LinearLayout>

            <Button
                android:id="@+id/get_started_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:text="Continue"
                android:textStyle="bold"
                android:background="@drawable/button_style"
                android:textColor="@color/colorClear"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
