<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/workout_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/workout_image"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="5dp"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="80dp" />

                <TextView
                    android:id="@+id/workout_name"
                    android:textAlignment="center"
                    android:text="Sample Text"
                    android:layout_weight="1"
                    android:textColor="#444"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/workout_achievment_img"
                    android:src="@drawable/ic_award"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight=".15"
                    android:layout_height="80dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/workout_more"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:padding="5dp"
                android:textSize="16sp"
                android:drawableRight="@drawable/ic_more"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/workout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/workout_desc"
                android:padding="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>