<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey">

    <!-- SETUP PAGE -->
    <ScrollView
        android:id="@+id/get_started_profile_setup_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/get_started_profile_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/get_started_profile_setup_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set up your profile"
                android:textAllCaps="true"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="Just a few more details.."
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="30dp"
                android:gravity="center">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/get_started_profile_setup_female"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:focusable="true"
                        android:clickable="true"
                        app:backgroundTint="#70cceb"
                        app:rippleColor="#dfdfdf"
                        android:src="@drawable/ic_female_sel_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="#3b8199"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/get_started_profile_setup_gender"
                    android:layout_gravity="center"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:backgroundTint="#dfdfdf"
                    android:src="@drawable/female_img"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/get_started_profile_setup_male"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:focusable="true"
                        android:clickable="true"
                        app:backgroundTint="#dfdfdf"
                        app:rippleColor="#70cceb"
                        android:src="@drawable/ic_male_sel_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="#3b8199"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:text="What's your age?"/>

            <EditText
                android:id="@+id/get_started_profile_setup_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:paddingStart="12dp"
                android:paddingBottom="7dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp"
                android:maxLines="1"
                android:inputType="number"
                android:background="@drawable/edittxt_style"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:text="What's your height?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/get_started_profile_setup_height"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="7dp"
                    android:layout_marginEnd="4dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:background="@drawable/edittxt_style"
                    android:textColor="@color/colorPrimary"/>

                <Button
                    android:id="@+id/get_started_profile_setup_ft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="FT"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style_on"/>

                <Button
                    android:id="@+id/get_started_profile_setup_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="IN"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/button_style_off"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:text="What's your weight?"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/get_started_profile_setup_weight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"
                    android:paddingBottom="7dp"
                    android:layout_marginEnd="4dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:background="@drawable/edittxt_style"
                    android:textColor="@color/colorPrimary"/>

                <Button
                    android:id="@+id/get_started_profile_setup_kg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="KG"
                    android:textColor="@color/white"
                    android:background="@drawable/button_style_on"/>

                <Button
                    android:id="@+id/get_started_profile_setup_lbs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="LBS"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/button_style_off"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:text="What's your lifestyle?"/>

            <RadioGroup
                android:id="@+id/get_started_profile_setup_lifestyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/get_started_profile_setup_lifestyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Sedentary"/>
                <RadioButton
                    android:id="@+id/get_started_profile_setup_lifestyle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:text="Moderate"/>
                <RadioButton
                    android:id="@+id/get_started_profile_setup_lifestyle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:text="Active"/>
                <RadioButton
                    android:id="@+id/get_started_profile_setup_lifestyle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:buttonTint="@color/colorPrimaryDark"
                    android:text="Very Active"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/get_started_profile_setup_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:text="Next"
                    android:background="@drawable/button_style"
                    android:textColor="@color/colorClear"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- LOGIN PAGE -->
    <LinearLayout
        android:id="@+id/get_started_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLightGrey"
        android:layout_centerVertical="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/get_started_login_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAllCaps="true"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="You can login through your Benefit account or through Google+ or Facebook"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/get_started_login_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_facebook_24dp"
            android:text="Log in with facebook"
            android:background="@drawable/button_style_facebook"
            android:textColor="@color/colorClear"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/get_started_login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_google_plus_24dp"
            android:text="Sign in with google"
            android:background="@drawable/button_style_google"
            android:textColor="@color/colorClear"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:src="@color/colorPrimaryLight"
            android:alpha="0.3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:text="Username"/>

            <TextView
                android:id="@+id/get_started_login_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorHighlight"
                android:textAlignment="textEnd"
                android:text="Invalid"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/get_started_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingStart="12dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:inputType="textNoSuggestions"
            android:background="@drawable/edittxt_style"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:text="Password"/>

            <TextView
                android:id="@+id/get_started_pass_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorHighlight"
                android:textAlignment="textEnd"
                android:text="Incorrect"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/get_started_login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingStart="12dp"
            android:paddingBottom="5dp"
            android:background="@drawable/edittxt_style"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"/>

        <TextView
            android:id="@+id/get_started_login_forget_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Forget password?"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/get_started_login_signup_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:text="Sign up"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:layout_marginEnd="30dp"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/get_started_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:text="Log in"
                android:background="@drawable/button_style"
                android:textColor="@color/colorClear"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- SIGNUP PAGE -->
    <LinearLayout
        android:id="@+id/get_started_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLightGrey"
        android:layout_centerVertical="true"
        android:visibility="invisible">

        <TextView
            android:id="@+id/get_started_signup_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a new account"
            android:textAllCaps="true"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/proxima_nova"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Enter your details to create a new Benefit account"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:text="Email Address"/>

            <TextView
                android:id="@+id/get_started_signup_email_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorHighlight"
                android:textAlignment="textEnd"
                android:text="Invalid"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/get_started_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingStart="12dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittxt_style"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:text="Username"/>

            <TextView
                android:id="@+id/get_started_signup_username_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorHighlight"
                android:textAlignment="textEnd"
                android:text="Invalid"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/get_started_signup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingStart="12dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:background="@drawable/edittxt_style"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorPrimary"
                android:text="Password"/>

            <TextView
                android:id="@+id/get_started_signup_password_invalid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/proxima_nova"
                android:textColor="@color/colorHighlight"
                android:textAlignment="textEnd"
                android:text="atleast 8 characters"
                android:visibility="invisible"/>
        </LinearLayout>

        <EditText
            android:id="@+id/get_started_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingStart="12dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/edittxt_style"
            android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/get_started_signup_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:text="Go back"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:layout_marginEnd="30dp"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/get_started_signup_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald"
                android:textStyle="bold"
                android:text="Next"
                android:background="@drawable/button_style"
                android:textColor="@color/colorClear"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>