<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/r4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Body composition and analysis"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:fontFamily="@font/oswald"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="This plan is only available in select cities"
            android:layout_gravity="center"
            android:fontFamily="@font/proxima_nova"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/nutrition_plan_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Get a call from us"
            android:textStyle="bold"
            android:background="@drawable/button_style_price"
            android:textColor="@color/colorClear"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>