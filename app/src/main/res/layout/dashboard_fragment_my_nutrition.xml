<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:id="@+id/nutrition_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_nutrition_24dp"/>

                <TextView
                    android:layout_toEndOf="@id/nutrition_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="My Nutrition Plan"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#181818"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f4d572"/>
                <TextView
                    android:id="@+id/my_nutrition_calendar_year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-50dp"
                    android:textColor="#f4cd6e"
                    android:textSize="140sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textAlignment="gravity"
                    android:text="2018"/>
            </RelativeLayout>

            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/my_nutrition_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorLightGrey"
                app:textColorSelected="#f4e072"/>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Today's nutrition plan"
                    android:fontFamily="@font/proxima_nova"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Breakfast"
            android:fontFamily="@font/proxima_nova"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6b475"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="2 egg whites"
                android:fontFamily="@font/proxima_nova"
                android:textColor="#f9f8f7"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="4 rotis"
                android:fontFamily="@font/proxima_nova"
                android:textColor="#f9f8f7"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="1 glass of mix fruit juice"
                android:fontFamily="@font/proxima_nova"
                android:textColor="#f9f8f7"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Handful of nuts"
                android:fontFamily="@font/proxima_nova"
                android:textColor="#f9f8f7"
                android:textStyle="bold"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f7f7"
            android:translationZ="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="270"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Calories"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="#b3b3b3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="35g"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Carbs"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="#b3b3b3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="24g"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Protein"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="#b3b3b3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:text="4g"
                        android:fontFamily="@font/oswald"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginStart="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Fat"
                        android:textAllCaps="true"
                        android:fontFamily="@font/oswald"
                        android:textColor="#565656"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="#f7f7f7"
            android:translationZ="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/exercise_img"/>
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="25dp"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_play_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Incline Bench Press"
                    android:fontFamily="@font/oswald"
                    android:textColor="#6b83ff"
                    android:textStyle="bold"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="2 sets, 6-8 reps"
                    android:fontFamily="@font/oswald"
                    android:textColor="#565656"
                    android:layout_marginStart="110dp"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>