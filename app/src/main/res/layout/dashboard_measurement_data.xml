<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/oswald"
            android:text="Body composition and analysis"
            android:textAllCaps="true"
            android:textColor="#222222"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_nova"
            android:text="Choose your call time from the slots below"
            android:textColor="#222222"
            android:textSize="16sp"/>
        
        <ListView
            android:id="@+id/dashboard_measurement_call_time"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textAlignment="center"/>

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_track_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f9f9f9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Enter your details to get a call from us"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/colorGreyOnBoard"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorPrimary"
                        android:text="Name"/>

                    <TextView
                        android:id="@+id/dashboard_measurement_data_name_invalid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorHighlight"
                        android:textAlignment="textEnd"
                        android:text="@string/lbl_invalid"
                        android:visibility="invisible"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/dashboard_measurement_data_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:hint=""
                    android:inputType="textPersonName"
                    android:background="@drawable/edittxt_style"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorPrimary"
                        android:text="Email Address"/>

                    <TextView
                        android:id="@+id/dashboard_measurement_data_email_invalid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorHighlight"
                        android:textAlignment="textEnd"
                        android:text="@string/lbl_invalid"
                        android:visibility="invisible"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/dashboard_measurement_data_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:hint=""
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittxt_style"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorPrimary"
                        android:text="Phone Number"/>

                    <TextView
                        android:id="@+id/dashboard_measurement_data_phone_invalid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/proxima_nova"
                        android:textColor="@color/colorHighlight"
                        android:textAlignment="textEnd"
                        android:text="@string/lbl_invalid"
                        android:visibility="invisible"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/dashboard_measurement_data_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:hint=""
                    android:inputType="phone"
                    android:background="@drawable/edittxt_style"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="City"/>

                <Spinner
                    android:id="@+id/dashboard_measurement_data_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/spinner_style"
                    android:spinnerMode="dropdown"/>

                <Button
                    android:id="@+id/dashboard_measurement_data_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:text="Get a call from us"
                    android:textStyle="bold"
                    android:background="@drawable/button_style"
                    android:textColor="@color/colorClear"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>