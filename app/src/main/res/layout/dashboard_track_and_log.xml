<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ededed">

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_track_my_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:id="@+id/track_activity_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_track_activity_24dp"/>

                <TextView
                    android:id="@+id/track_activity_my_txt"
                    android:layout_toEndOf="@id/track_activity_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Track My Activity"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/track_activity_my_proceed"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_next_24dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_track_meal_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:id="@+id/meal_log_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_meal_log_24dp"/>

                <TextView
                    android:id="@+id/meal_log_txt"
                    android:layout_toEndOf="@id/meal_log_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Meal Log"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/meal_log_proceed"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_next_24dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_track_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/dashboard_track_steps_tab_btn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="#f4f4f0"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/steps_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_steps_on_24dp"/>
                        <TextView
                            android:layout_toEndOf="@id/steps_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Steps Taken"
                            android:textAllCaps="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/oswald"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"/>
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#b3b3b3"/>
                    <RelativeLayout
                        android:id="@+id/dashboard_track_water_tab_btn"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="#f4f4f0"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/water_icon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_water_off_24dp"/>
                        <TextView
                            android:id="@+id/water_txt"
                            android:layout_toEndOf="@id/water_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Water Intake"
                            android:textAllCaps="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/oswald"
                            android:textStyle="bold"
                            android:textColor="@color/warm_grey"
                            android:layout_marginStart="10dp"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/dashboard_track_indicator_steps"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:background="@color/black"/>
                    <ImageView
                        android:id="@+id/dashboard_track_indicator_water"
                        android:layout_width="0dp"
                        android:layout_height="3dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:background="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dashboard_track_indicator_tab_steps"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/steps_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="42sp"
                    android:text="100"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="@color/colorGreyOnBoard"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-14dp"
                    android:textSize="24sp"
                    android:text="Steps"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textColor="@color/colorGreyOnBoard"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:text="270"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Calories"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#565656"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:background="#b3b3b3"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:text="40"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Minutes"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#565656"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:background="#b3b3b3"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            android:text="3"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginStart="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Distance (KM)"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="#565656"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Steps Timeline"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#a7a7a7" />

                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/dashboard_track_steps_graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dashboard_track_indicator_tab_water"
                android:layout_marginTop="65dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="32dp">

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/dashboard_track_water_consumed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="42sp"
                            android:fontFamily="@font/oswald"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorGreyOnBoard"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Consumed"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/colorGreyOnBoard"
                            android:layout_gravity="center_horizontal"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/circle_water_view"
                        android:layout_gravity="center">

                        <com.gelitenight.waveview.library.WaveView
                            android:id="@+id/dashboard_track_indicator_tab_water_wave"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/water_glass"/>

                        <TextView
                            android:id="@+id/dashboard_track_water_add"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/proxima_nova"
                            android:text="+"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textColor="#FFFFFF"
                            android:textSize="42sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dashboard_track_water_subtract"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/proxima_nova"
                            android:text="-"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:textColor="#FFFFFF"
                            android:textSize="42sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/dashboard_track_water_target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="42sp"
                            android:fontFamily="@font/oswald"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorGreyOnBoard"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="Target"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:fontFamily="@font/oswald"
                            android:textColor="@color/colorGreyOnBoard"
                            android:layout_gravity="center_horizontal"/>
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Drinking a glass of water (250 ml) every 15 minutes or so is very good for your body as water flushes out toxins, cleanses the skin and aids digestion"
                    android:textAlignment="center"
                    android:textColor="#414141"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Water Intake Timeline"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#222222"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#a7a7a7" />

                <lecho.lib.hellocharts.view.ColumnChartView
                    android:id="@+id/dashboard_track_water_graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>