<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/choose_a_plan_intro_pager"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/choose_a_plan_intro_pager_indicator1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/circle"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/choose_a_plan_intro_pager_indicator2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/circle"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/choose_a_plan_intro_pager_indicator3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/circle"
                android:contentDescription="@null"/>

            <ImageView
                android:id="@+id/choose_a_plan_intro_pager_indicator4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/circle"
                android:contentDescription="@null"/>
        </LinearLayout>

        <TextView
            android:id="@+id/choose_a_plan_intro_pager_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova"
            android:textSize="24sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="Talk to your coach regularly through chat and call."
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <Button
        android:id="@+id/choose_a_plan_intro_plans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:text="Choose a plan now"
        android:textStyle="bold"
        android:background="@drawable/button_style"
        android:textColor="@color/colorClear"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>