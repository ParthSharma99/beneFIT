<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ededed">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#f7f7f7"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/oswald"
                    android:text="Your Body Mass Index"
                    android:textAllCaps="true"
                    android:textColor="#222222"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#a7a7a7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/oswald"
                    android:text="24.69"
                    android:textAllCaps="true"
                    android:textColor="#444444"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/oswald"
                    android:text="Normal"
                    android:textAllCaps="true"
                    android:textColor="#b3d442"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="Make healthy food choices and participate in regular physical activity to be more fit and in shape."
                    android:textAlignment="center"
                    android:textColor="#3b3b3b"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/proxima_nova"
                    android:text="BMI Graph"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#222222"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="#a7a7a7" />

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/dashboard_measurement_bmi_graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Your Basal Metabolic Rate"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#a7a7a7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="36sp"
                    android:text="1765 calories"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="The basal metabloic rate (BMR) is the amount of energy needed while resting in a temprature environment when the digestive system is inactive."
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="#3b3b3b"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="22sp"
                    android:text="BMR Graph"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#a7a7a7"/>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/dashboard_measurement_basal_graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="Your Body Fat %"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#a7a7a7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="36sp"
                    android:text="15.9%"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#444444"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:textSize="21sp"
                    android:text="Ideal 9% - 73 Kgs"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#b3d442"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="22sp"
                    android:text="Body Fat % Graph"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/proxima_nova"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#a7a7a7"/>

                <lecho.lib.hellocharts.view.LineChartView
                    android:id="@+id/dashboard_measurement_fat_graph"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/dashboard_measurement_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oswald"
            android:text="Back"
            android:textStyle="bold"
            android:background="@drawable/button_style"
            android:textColor="@color/colorClear"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
</ScrollView>