<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ededed">

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_nutrition_my_nutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp">

                <ImageView
                    android:id="@+id/nutrition_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_my_nutrition_24dp"/>

                <TextView
                    android:id="@+id/dashboard_nutrition_my_txt"
                    android:layout_toEndOf="@id/nutrition_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="My Nutrition Plan"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#9d9d9d"
                    android:layout_marginStart="10dp"/>
                <ImageView
                    android:id="@+id/dashboard_nutrition_my_lock"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_locked_24dp"/>
                <ImageView
                    android:id="@+id/dashboard_nutrition_my_proceed"
                    android:visibility="invisible"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_next_24dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_nutrition_insight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#f7f7f7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Nutrition Insight"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/oswald"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_protein_facts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn1" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_food_supplements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn2"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_rejuvenate_with_detox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn3"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_liquid_nutritional_drinks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn4"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_commom_eating_mistakes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn5"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_weight_loss_formula"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn6"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_need_of_vitamins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn7"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_myths_facts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn8"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_how_to_gain_good_weight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn9"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/dashboard_nutrition_pre_post_workout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fn10"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>