<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/c"
    android:orientation="vertical"><!-- android:background="@drawable/gradient_1" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:background="@drawable/border"
            android:layout_weight=".5"
            android:clickable="true"
            android:onClick="workout_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="WORKOUT"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="nutrition_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="NUTRITION"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="track_n_log_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="TRACK\n&#38;\nLOG"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="measurement_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="MEASUREMENT"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="goal_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="GOAL"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="coach_click">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#aa000000"
                android:fontFamily="serif-monospace"
                android:text="COACH"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>